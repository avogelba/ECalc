<UserControl x:Class="ECalc.Pages.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECalc.Pages"
             xmlns:controls="clr-namespace:ECalc.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="490" d:DesignWidth="960">
    <UserControl.Resources>
        <Style x:Key="LargeTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="269" />
            <Setter Property="Height" Value="132" />
            <Setter Property="TitleFontSize" Value="14"/>
        </Style>

        <Style TargetType="mah:Tile">
            <Setter Property="TitleFontSize" Value="13"/>
            <Setter Property="Width" Value="132"/>
            <Setter Property="Height" Value="132"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="StretchDirection" Value="DownOnly"/>
            <Setter Property="MaxWidth" Value="70"/>
            <Setter Property="MaxHeight" Value="70"/>
        </Style>

        <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="14"
                                   Foreground="{StaticResource W8Emerald}"
                                   FontFamily="Arial Black"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Orientation="Horizontal">
            <GroupBox Header="Generic"
                      Width="304">
                <WrapPanel>
                    <mah:Tile Title="Calculator"
                          Background="{StaticResource W8Indigo}"
                          Style="{StaticResource LargeTileStyle}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/calculator.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Statistics"
                          Background="{StaticResource W8Orange}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/statistics.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Unit Converter"
                          Background="{StaticResource W8Red}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/unitconverter.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Equation System Solver"
                          Background="{StaticResource W8Yellow}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/hash.png"/>
                    </mah:Tile>
                </WrapPanel>
            </GroupBox>
            <GroupBox Header="Engineering"
                      Width="300">
                <WrapPanel>
                    <mah:Tile Title="Logic Minimizer"
                          Background="{StaticResource W8Lime}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/electronics.png"/>
                    </mah:Tile>
                    <mah:Tile Title="IP Subnet Calc."
                          Background="{StaticResource W8Magenta}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/ipaddress.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Hash Calculator"
                          Background="{StaticResource W8Olive}"
                          Click="Tile_Click">
                        <Image Source="../Images/100px/hash.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Resistor Color"
                              Background="{StaticResource W8Mauve}"
                              Click="Tile_Click">
                        <Image Source="../Images/100px/resistor.png"/>
                    </mah:Tile>
                </WrapPanel>
            </GroupBox>
            <GroupBox Header="Help"
                      Width="150">
                <WrapPanel>
                    <mah:Tile Title="About"
                              Background="{StaticResource W8Cobalt}"
                              Click="Tile_Click">
                        <Image Source="../Images/100px/about.png"/>
                    </mah:Tile>
                    <mah:Tile Title="Online docs"
                              Background="{StaticResource W8Cyan}"
                              Click="Tile_Click">
                        <Image Source="../Images/100px/help.png"/>
                    </mah:Tile>
                </WrapPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
