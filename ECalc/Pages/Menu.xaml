<UserControl x:Class="ECalc.Pages.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECalc.Pages"
             xmlns:controls="clr-namespace:ECalc.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="490" d:DesignWidth="960">
    <UserControl.Resources>
        <Style x:Key="LargeTileStyle" TargetType="mah:Tile">
            <Setter Property="Width" Value="269" />
            <Setter Property="Height" Value="132" />
            <Setter Property="TitleFontSize" Value="12"/>
        </Style>

        <Style TargetType="mah:Tile">
            <Setter Property="TitleFontSize" Value="13"/>
            <Setter Property="Width" Value="132"/>
            <Setter Property="Height" Value="132"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}">
                            <ContentPresenter.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform Y="-20" X="-20"/>
                                </TransformGroup>
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Image">
            <Setter Property="StretchDirection" Value="DownOnly"/>
            <Setter Property="MaxWidth" Value="85"/>
            <Setter Property="MaxHeight" Value="85"/>
        </Style>

        <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="14"
                                   Foreground="{StaticResource W8Emerald}"
                                   FontFamily="Arial Black"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="190"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Generic"
                  Grid.Row="0"
                  Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <mah:Tile Title="Calculator"
                          Background="{StaticResource W8Indigo}"
                          Style="{StaticResource LargeTileStyle}"
                          Click="Tile_Click">
                    <Image Source="../Images/100px/calculator.png"/>
                </mah:Tile>
                <mah:Tile Title="Statistics"
                          Background="{StaticResource W8Orange}"
                          Click="Tile_Click">
                    <Image Source="../Images/100px/statistics.png"/>
                </mah:Tile>
                <mah:Tile Title="Unit Converter"
                          Background="{StaticResource W8Red}"
                          Click="Tile_Click">
                    <Image Source="../Images/100px/unitconverter.png"/>
                </mah:Tile>
                <mah:Tile Title="Equation System Solver"
                          Background="{StaticResource W8Yellow}"
                          Click="Tile_Click">
                    <Image Source="../Images/100px/hash.png"/>
                </mah:Tile>
                <mah:Tile Title="Currency Converter"
                          Background="{StaticResource W8Taupe}"
                          Click="Tile_Click">
                    <Image Source="../Images/100px/currency.png"/>
                </mah:Tile>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="1"
                  Grid.Column="0"
                  Header="Modules">
            <ListBox Margin="3"
                     x:Name="CategoryView"
                     SelectionChanged="CategoryView_SelectionChanged"/>
        </GroupBox>
        <ScrollViewer Grid.Row="1"
                      Grid.Column="1">
            <WrapPanel x:Name="ModuleDisplay"></WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
