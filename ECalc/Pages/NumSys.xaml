<UserControl x:Class="ECalc.Pages.NumSys"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ECalc.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="960">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <controls:NumSysInput Grid.Row="0"
                              x:Name="DisplayInput"
                              CaptionText="Input System:"
                              NumberSystem="Dec"/>
        <controls:NumSysInput Grid.Row="1"
                              x:Name="DisplayOutput"
                              CaptionText="Output System:"
                              NumberSystem="Bin"/>
    </Grid>
</UserControl>
