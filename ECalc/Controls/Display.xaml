<UserControl x:Name="userControl" x:Class="ECalc.Controls.Display"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ECalc.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="600">
    <UserControl.Resources>
        <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource {x:Type RadioButton}}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="1"/>
        </Style>

        <Style TargetType="{x:Type controls:ImageButton}" BasedOn="{StaticResource {x:Type controls:ImageButton}}">
            <Setter Property="Margin" Value="2,0"/>
        </Style>
        
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RadioButton Content="DEG"
                     Grid.Row="0"
                     Grid.Column="0"
                     IsChecked="True"
                     Checked="RadioButton_Click"/>
        <RadioButton Content="RAD"
                     Grid.Row="0"
                     Grid.Column="1"
                     Checked="RadioButton_Click"/>
        <RadioButton Content="GRAD"
                     Grid.Row="0"
                     Grid.Column="2"
                     Checked="RadioButton_Click"/>
        <CheckBox Grid.Column="3"
                  x:Name="CbThousandGrouping"
                  Grid.Row="0"
                  Content="Group by thousands"
                  IsChecked="False"/>
        <TextBox Grid.Row="1"
                 Grid.ColumnSpan="5"
                 Text="{Binding EquationText, ElementName=userControl}"
                 TextAlignment="Right"
                 FontFamily="Courier New"
                 FontSize="15"
                 Style="{StaticResource BorderlessTextBox}"/>
        <TextBlock Grid.Row="2"
                   Grid.ColumnSpan="5"
                   Text="{Binding ResultText, ElementName=userControl}"
                   TextAlignment="Right"
                   FontFamily="Consolas"
                   TextWrapping="Wrap"
                   FontSize="28"/>
        <StackPanel Grid.Row="3"
                    Grid.ColumnSpan="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <controls:ImageButton Image="../Images/50px/fractions.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnFractions"
                                  ToolTip="Convert current result to fractions"
                                  Click="BtnFractions_Click"/>
            
            <controls:ImageButton Image="../Images/50px/divide.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnDivisiors"
                                  ToolTip="Divisor test from 2 to 20"
                                  Click="BtnDivisiors_Click"/>


            <controls:ImageButton Image="../Images/50px/T.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnNumToText"
                                  ToolTip="Number to text"
                                  Click="BtnNumToText_Click"/>

            <controls:ImageButton Image="../Images/50px/N.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnNumSys"
                                  ToolTip="Number System"
                                  Click="BtnNumSys_Click"/>
            
            <controls:ImageButton Image="../Images/50px/Up.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  ToolTip="Previous expression in histroy"
                                  x:Name="BtnHistoryPrev"
                                  Click="BtnHistoryPrev_Click"/>

            <controls:ImageButton Image="../Images/50px/Down.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnHistoryNext"
                                  ToolTip="Next expression in history"/>

            <controls:ImageButton Image="../Images/50px/Undo.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnUndo"
                                  Click="BtnUndo_Click"
                                  ToolTip="Undo"/>

            <controls:ImageButton Image="../Images/50px/Delete.png"
                                  ImageWidth="25"
                                  ImageHeight="25"
                                  x:Name="BtnReset"
                                  Click="BtnReset_Click"
                                  ToolTip="Reset"/>
        </StackPanel>
    </Grid>
</UserControl>
