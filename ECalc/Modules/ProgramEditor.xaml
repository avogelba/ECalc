<UserControl x:Class="ECalc.Modules.ProgramEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECalc.Modules"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Functions"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="2"/>
        <ListBox x:Name="LbFunctions"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.RowSpan="3"
                 Margin="2"/>
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="Name:"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="TbName"
                 Grid.Row="1"
                 Grid.Column="2" Width="200"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Text="Aruments:"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <mah:NumericUpDown x:Name="NumArgCount"
                           Grid.Row="2"
                           Grid.Column="2"
                           Minimum="0"
                           Maximum="12"
                           Width="200"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
        <TextBox x:Name="TbCode" Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 AcceptsReturn="True"
                 Margin="2">
        </TextBox>
        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Button Content="Delete Function"
                    x:Name="BtnDelete"
                    Width="200"
                    Margin="5,0"/>
            <Button Content="Save"
                    x:Name="BtnSave"
                    Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
