<Window x:Class="ECalc.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECalc"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SplashScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Background="Transparent"
        AllowsTransparency="True"
        Height="300" Width="620">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="Images/large/splash.jpg"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock Text="v. 1.0"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Foreground="#FF322B2B"
                       FontWeight="Black"
                       Margin="5,0"
                       x:Name="VersionString"
                       FontSize="35"/>
        </Grid>
    </Border>
</Window>
