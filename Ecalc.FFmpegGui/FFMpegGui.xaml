<UserControl
    x:Class="Ecalc.FFmpegGui.FFMpegGui"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Ecalc.FFmpegGui"
    mc:Ignorable="d" 
    d:DesignHeight="500"
    d:DesignWidth="800">
    <TabControl
        x:Name="Tabs"
        SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="Input files">
            <local:InputFiles
                x:Name="InputFiles"/>
        </TabItem>
        <TabItem Header="Presets">
            <ListBox
                x:Name="PresetList">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            FontSize="18"
                            Text="{Binding Description}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </TabItem>
        <TabItem Header="Command line">
            <local:CommandLineEditor
                x:Name="CmdEditor"/>
        </TabItem>
        <TabItem Header="Output">
            <local:OutputNamer
                x:Name="OutputNamer"/>
        </TabItem>
        <TabItem Header="Command generation">

        </TabItem>
    </TabControl>
</UserControl>
